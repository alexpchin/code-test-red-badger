%p#notice= notice

%p
  %b Name:
  = @world.name
%p
  %b X:
  = @world.x
%p
  %b Y:
  = @world.y

/ = @world.display_grid

%h3 Robots
= link_to 'Deploy robot', new_world_robot_path(@world)
- if @robots.present?
  = render @robots
- else 
  %p No robots have been deployed.


%h3 Moves
- if @world.deployed_robot?
  = link_to "New Move", new_world_robot_move_path(@world, @robot)

- if @moves.present?
  = render @moves

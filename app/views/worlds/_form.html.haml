= form_for @world do |f|
  - if @world.errors.any?
    #error_explanation
      %h2= "#{pluralize(@world.errors.count, "error")} prohibited this world from being saved:"
      %ul
        - @world.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :x
    = f.number_field :x
  .field
    = f.label :y
    = f.number_field :y
  .actions
    = f.submit 'Save'

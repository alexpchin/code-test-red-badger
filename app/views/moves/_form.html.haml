= form_for [@world, @robot, @move] do |f|
  - if @move.errors.any?
    #error_explanation
      %h2= "#{pluralize(@move.errors.count, "error")} prohibited this move from being saved:"
      %ul
        - @move.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :orientation
    = f.select :orientation, @move.orientations.map { |o| [o, o] }
  .field
    = f.label :x
    = f.select :x, @move.range.map { |r| [r, r] }
  .field
    = f.label :y
    = f.select :y, @move.range.map { |r| [r, r] }

  .actions
    = f.submit 'Save'
